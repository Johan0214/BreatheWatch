<div class="auth-form">
    <h2>Log In to BreatheWatch</h2>

    {{#if error}}
        <div class="error-message">
            <ul>
                <li>{{error}}</li>
            </ul>
        </div>
    {{/if}}

    <form id="login-form" method="POST" action="/login">
        
        <div class="form-group">
            <label for="username">Username</label>
            <input 
                type="text" 
                id="username" 
                name="username" 
                value="{{formData.username}}" 
                required 
                aria-label="Username"
            >
            <span id="username-error" class="error-message" style="display:none;"></span>
        </div>

        <div class="form-group">
            <label for="password">Password</label>
            <input 
                type="password" 
                id="password" 
                name="password" 
                required 
                aria-label="Password"
            >
            <span id="password-error" class="error-message" style="display:none;"></span>
        </div>

        <button type="submit" class="button primary" style="width: 100%; margin-top: 1rem;">Login</button>

        <p style="margin-top: 1.5rem; font-size: 0.9rem; text-align: center;">
            Don't have an account? <a href="/signup" style="color: var(--secondary-color); text-decoration: none;">Sign up now.</a>
        </p>
    </form>
</div>
