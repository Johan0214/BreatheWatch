<style>
    .dashboard-container {
        padding: 20px;
        max-width: 1000px;
        margin: 0 auto;
    }
    .grid-layout {
        display: grid;
        grid-template-columns: 1fr 2fr;
        gap: 30px;
        margin-top: 20px;
    }
    .card {
        background: var(--card-background);
        border-radius: var(--border-radius);
        box-shadow: var(--box-shadow-main);
        padding: 25px;
        margin-bottom: 20px;
    }
    .profile-section h3 {
        color: var(--primary-dark);
        margin-bottom: 15px;
        border-bottom: 2px solid #eee;
        padding-bottom: 10px;
    }
    .profile-details p {
        margin-bottom: 10px;
    }
    .reports-list {
        list-style: none;
        padding: 0;
    }
    .report-item {
        padding: 15px;
        border: 1px solid #e0e0e0;
        border-radius: 8px;
        margin-bottom: 10px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        transition: background-color 0.3s;
    }
    .report-item:hover {
        background-color: #f9f9f9;
    }
    .report-item a {
        text-decoration: none;
        color: var(--secondary-color);
        font-weight: 600;
    }
</style>

<div class="dashboard-container">
    <h1>Welcome to Your BreatheWatch Dashboard, {{user.firstName}}!</h1>
    <p class="subtitle">Quick access to your profile and health reports.</p>

    <div class="grid-layout">
        <div class="profile-section">
            <div class="card">
                <h3>Your Profile Details</h3>
                <div class="profile-details">
                    <p><strong>Username:</strong> {{user.username}}</p>
                    <p><strong>Name:</strong> {{user.firstName}} {{user.lastName}}</p>
                    <p><strong>Location:</strong> {{user.location.city}}, {{user.location.state}}</p>
                    <p><strong>Age:</strong> {{user.age}}</p>
                </div>
                
                <h4 style="margin-top: 20px; color: #555;">Personal Goal Description:</h4>
                <p>{{user.profileDescription}}</p>

                <div style="margin-top: 20px;">
                    <a href="/profile/edit" class="button primary">Update Profile</a>
                </div>
            </div>
            
            <div class="card" style="text-align: center;">
                <h3>Air Quality Status</h3>
                <p>Based on your saved location, your current risk score is:</p>
                <h2 style="color: green; font-size: 2.5rem; margin: 10px 0;">{{currentRisk}}</h2>
                <a href="/map" class="button secondary">View Interactive Map</a>
            </div>
        </div>

        <div class="reports-section">
            <div class="card">
                <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 15px;">
                    <h2>Your Logged Reports</h2>
                    <a href="/reports/create" class="button primary">Create New Report</a>
                </div>

                <ul class="reports-list">
                    {{#if reports.length}}
                        <div style="overflow-x: auto;">
                            <table>
                                <thead>
                                    <tr>
                                        <th>Location</th>
                                        <th>Type</th>
                                        <th>Severity</th>
                                        <th>Status</th>
                                        <th>Date</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each reports}}
                                    <tr>
                                        <td>{{this.neighborhood}}, {{this.borough}}</td>
                                        <td>{{this.reportType}}</td>
                                        <td>
                                            <span class="score {{#if (eq this.severity "High")}}high-risk{{else}}{{#if (eq this.severity "Medium")}}moderate{{else}}safe{{/if}}{{/if}}">
                                                {{this.severity}}
                                            </span>
                                        </td>
                                        <td>
                                            <span class="score {{#if (eq this.status "Resolved")}}safe{{else}}{{#if (eq this.status "Reviewed")}}moderate{{else}}high-risk{{/if}}{{/if}}">
                                                {{this.status}}
                                            </span>
                                        </td>
                                        <td>{{this.createdAt}}</td>
                                        <td>
                                            <a href="/reports/{{toString this._id}}" class="btn" style="padding: 0.5rem 1rem; font-size: 0.9rem;">View</a>
                                        </td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>

                        <div style="margin-top: 2rem; padding: 1.5rem; background: #edf2f7; border-radius: 8px;">
                            <h3 style="margin-bottom: 0.5rem;">Report Statistics</h3>
                            <p><strong>Total Reports:</strong> {{reports.length}}</p>
                        </div>
                    {{else}}
                        <li style="text-align: center; color: #777; padding: 30px;">
                            You have not logged any reports yet. Click "Create New Report" to start tracking your observations.
                        </li>
                    {{/if}}
                </ul>
            </div>
        </div>
    </div>
</div>