<div class="auth-form">
    <h2>Create Your BreatheWatch Account</h2>

    {{#if error}}
        <div class="error-message">
            <ul>
                <li>{{error}}</li>
            </ul>
        </div>
    {{/if}}

    <form id="signup-form" method="POST" action="/signup">
        <div class="form-group">
            <label for="firstName">First Name</label>
            <input type="text" id="firstName" name="firstName" value="{{formData.firstName}}" required>
            <span id="firstName-error" class="error-message" style="display:none;"></span>
        </div>

        <div class="form-group">
            <label for="lastName">Last Name</label>
            <input type="text" id="lastName" name="lastName" value="{{formData.lastName}}" required>
            <span id="lastName-error" class="error-message" style="display:none;"></span>
        </div>

        <div class="form-group">
            <label for="username">Username</label>
            <input type="text" id="username" name="username" value="{{formData.username}}" required>
            <span id="username-error" class="error-message" style="display:none;"></span>
        </div>

        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" required>
            <span id="password-error" class="error-message" style="display:none;"></span>
        </div>

        <div class="form-group">
            <label for="confirmPassword">Confirm Password</label>
            <input type="password" id="confirmPassword" name="confirmPassword" required>
            <span id="confirmPassword-error" class="error-message" style="display:none;"></span>
        </div>

        <button type="submit" class="button primary" style="width: 100%; margin-top: 1rem;">Sign Up</button>

        <p style="margin-top: 1.5rem; font-size: 0.9rem; text-align: center;">
            Already have an account? <a href="/login" style="color: var(--secondary-color); text-decoration: none;">Log in here.</a>
        </p>
    </form>
</div>
