<div class="auth-form">
    <h2>Create Your BreatheWatch Account</h2>
    {{#if hasErrors}}
        <div class="error-message">
            <ul>
                {{#each errors}}
                    <li>{{this}}</li>
                {{/each}}
            </ul>
        </div>
    {{/if}}

    <form id="signup-form" method="POST" action="/signup">
        <div class="form-group">
            <label for="firstName">First Name</label>
            <!-- value="{{user.firstName}}" keeps the input if the form fails validation -->
            <input type="text" id="firstName" name="firstName" value="{{user.firstName}}" required>
        </div>

        <div class="form-group">
            <label for="lastName">Last Name</label>
            <input type="text" id="lastName" name="lastName" value="{{user.lastName}}" required>
        </div>

        <div class="form-group">
            <label for="username">Username</label>
            <input type="text" id="username" name="username" value="{{user.username}}" required>
        </div>

        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" required>
        </div>

        <div class="form-group">
            <label for="confirmPassword">Confirm Password</label>
            <input type="password" id="confirmPassword" name="confirmPassword" required>
        </div>

        <button type="submit" class="button primary" style="width: 100%; margin-top: 1rem;">Sign Up</button>

        <p style="margin-top: 1.5rem; font-size: 0.9rem; text-align: center;">
            Already have an account? <a href="/login" style="color: var(--secondary-color); text-decoration: none;">Log in here.</a>
        </p>
    </form>
</div>