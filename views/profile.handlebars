    <form id="profile-form" class="auth-form">
        <div class="form-group">
            <label for="profileDescription">Your Profile Description</label>
            <textarea 
                id="profileDescription" 
                name="profileDescription" 
                rows="5" 
                maxlength="500" 
                placeholder="Example: I'm a renter looking for a clean-air neighborhood for my kids, avoiding heavy traffic areas."
                required
            >{{user.profileDescription}}</textarea>
            <small>Max 500 characters.</small>
        </div>
        
        <button type="submit" id="save-profile-button" class="button primary">Save Profile</button>
    </form>
    
    <p class="back-link"><a href="/home">‚Üê Back to Dashboard</a></p>
</div>

